<hostdev type="pci" managed="yes"
{% if options.get('no-strict-reset', False) %}
 nostrictreset="yes"
{% endif %}
>
    <source
{% if options.get('permissive', False) %}
     writeFiltering="no"
{% endif %}
    >
        <address
            bus="0x{{ device.bus }}"
            slot="0x{{ device.device }}"
            function="0x{{ device.function }}" />
    </source>
</hostdev>

